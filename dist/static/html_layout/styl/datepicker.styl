.datepicker 
    color color-text-primary
    font-size 14px
    visibility visible


.datepicker table 
    margin-bottom 8px


.datepicker .datepicker-days,
.datepicker .datepicker-months,
.datepicker .datepicker-years 
    padding-left 25px
    padding-right 25px


.datepicker tr 
    border-radius 0


.datepicker thead tr:nth-child(2) 
    border-bottom 1px solid color-text-disable

    th 
	    font-weight @regular
	    font-size 15px
    	padding-top 9px
    


.datepicker thead th.prev,
.datepicker thead th.next 
    position relative
    color transparent


.datepicker thead th.prev::before,
.datepicker thead th.next::before 
    font-family 'Glyphicons Halflings'
    color color-text-primary
    position absolute
    left 8px
    top 7px


.datepicker thead th.prev::before 
    content "\e079"


.datepicker thead th.next::before 
    content "\e080"


.datepicker thead .dow 
    font-weight bold


.datepicker tbody 
    /*border-bottom: 1px solid #bbb;*/


.datepicker tbody tr td.day 
    padding 2px
    border-radius 15px
    line-height 26px


.datepicker tbody tr td.day:hover:not(.disabled),
.datepicker tbody tr td.day.focused:not(.disabled) 
    background color-background-hover
    color color-secondary


.datepicker tbody tr td.day.today 
    position relative
    color color-primary
    font-weight medium


.datepicker tbody tr td.day.today,
.datepicker tbody tr td.day.today:hover,
.datepicker tbody tr td.day.today:focus,
.datepicker tbody tr td.day.today.disabled,
.datepicker tbody tr td.day.today:hover.disabled,
.datepicker tbody tr td.day.today:focus.disabled,
.datepicker tbody tr td.day.today:hover,
