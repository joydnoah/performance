.datepicker tbody tr td.day.today:focus:hover,
.datepicker tbody tr td.day.today.disabled:hover,
.datepicker tbody tr td.day.today:hover.disabled:hover,
.datepicker tbody tr td.day.today:focus.disabled:hover,
.datepicker tbody tr td.day.today:focus,
.datepicker tbody tr td.day.today:hover:focus,
.datepicker tbody tr td.day.today:focus:focus,
.datepicker tbody tr td.day.today.disabled:focus,
.datepicker tbody tr td.day.today:hover.disabled:focus,
.datepicker tbody tr td.day.today:focus.disabled:focus 
    background-color transparent


.datepicker tbody tr td.day.today::before,
.datepicker tbody tr td.day.today:hover::before,
.datepicker tbody tr td.day.today:focus::before,
.datepicker tbody tr td.day.today.disabled::before,
