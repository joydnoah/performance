.datepicker tbody tr td.day.today:hover.disabled:hover::before,
.datepicker tbody tr td.day.today:focus.disabled:hover::before,
.datepicker tbody tr td.day.today:focus::before,
.datepicker tbody tr td.day.today:hover:focus::before,
.datepicker tbody tr td.day.today:focus:focus::before,
.datepicker tbody tr td.day.today.disabled:focus::before,
.datepicker tbody tr td.day.today:hover.disabled:focus::before,
.datepicker tbody tr td.day.today:focus.disabled:focus::before 
    content ''
    position: absolute
    left 0
    top 0
    width 100%
    height 100%
    border 1px solid color-primary
    border-radius 100%


