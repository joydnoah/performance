
html
	body
		font-family font-principal !important
		min-width 1024px

		h1, h2, h13, h4, h5, h6, a, ul, li, p, div, span, button, select, input, textarea, label
			font-family font-principal !important

.body-container
	background color-white
	padding-bottom 30px
	width auto

.general-container
	display block
	margin 0 auto
	max-width 1100px
	min-width 1024px
	padding 0 15px

.visibility-hidden
	visibility hidden

.visibility-visible
	visibility visible

.no-margin
	margin 0 !important

.no-padding
	padding 0 !important

.scroll-hidden
	overflow hidden

.scroll-hidden-x
	overflow-x hidden

.scroll-hidden-y
	overflow-y hidden

.separator
	background color-border
	height 1px

.switch-container
	.switch-message
		color color-text-secondary
		font-size 14px
		font-weight regular
		line-height 1.7
		margin-left 15px
		margin-right 15px
		text-align right
		vertical-align top

.switch-content
	display inline-block
	.onoffswitch
		position relative
		width 48px
		.onoffswitch-checkbox
			display none
		.onoffswitch-label
			border-radius 100px
			cursor pointer
			display block
			height 26px
			margin 0
			width 48px
		.onoffswitch-inner
			display block
			width 200%
			.onoffswitch-active
				background-color color-border
				border-radius 12px
				color color-white
				padding-right 11px
				position relative
				.onoffswitch-switch
					background color-accent
					border-radius 100%
					opacity 0
					position absolute
					right 24px
			.onoffswitch-inactive
				color color-white
				padding-left 11px
				position absolute
				.onoffswitch-switch
					background color-error
					border-radius 100%
					left 0
					opacity 1
					position absolute
		.onoffswitch-inner > span
			box-sizing border-box
			color white
			display block
			float left
			font-size 10px
			font-weight medium
			height 24px
			line-height 24px
			padding 0
			position relative
			text-transform uppercase
			width 50%
		.onoffswitch-switch
			border 0px
			bottom 0
			display block
			font-size 10px
			font-weight medium
			height 22px
			line-height 23px
			margin 1px
			text-align center
			position absolute
			top 0
			width 22px
		.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-inner .onoffswitch-active .onoffswitch-switch
			background color-success
			left 24px
			opacity 1
			right 0
		.onoffswitch-checkbox:checked + .onoffswitch-label .onoffswitch-inner .onoffswitch-inactive .onoffswitch-switch
			left 24px
			opacity 0

