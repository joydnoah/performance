
.empty-message-container
	background color-background
	margin 70px 0
	padding 60px 0 35px
	text-align center
	.empty-icon
		margin-bottom 13px
		.material-icons
			color color-text-disable
			font-size 60px
	.empty-message
		color color-text-secondary
		font-size 17px
		font-weight regular
		line-height 1.3
		margin-bottom 25px
	.mdl-button
		&.empty-btn
			background color-third
			border-radius 100px
			box-shadow 0px 2px 8px rgba(0,0,0,0.13)
			color color-white
			font-size 16px
			height 36px
			margin-bottom 25px
			padding 0 25px
			text-transform none
			min-width 175px