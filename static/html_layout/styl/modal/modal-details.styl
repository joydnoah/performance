.applicant-modal-header-container
	background color-background
	border-bottom solid 1px color-border
	padding 25px 0
	.header-bookmark
		background color-white
		border solid 1px
		border-color color-empty
		border-radius 100px
		cursor pointer
		display inline-block
		height 30px
		margin-right 15px
		text-align center
		padding-top 5px
		width 30px
		.material-icons
			color color-empty
			font-size 18px
		&.is-active
			border-color color-primary
			.material-icons
				color color-primary
	.header-name
		color color-text-primary
		display inline-block
		font-size 20px
		font-weight regular
		margin 0
	.header-info
		color color-text-secondary
		font-size 14px
		font-weight regular
		line-height 1.2
		margin 0
	.header-compatibility
		p
			color color-text-secondary
			font-size 13px
			line-height 1.1
			margin-bottom 6px
		.compatibility-container
			background color-empty
			border-radius 100px
			height 7px
			width 100%
			.compatibility-level
				background color-empty
				border-radius 100px
				height 7px
				width 0%
		&.is-high
			p
				color color-success
			.compatibility-container
				.compatibility-level
					background color-success
					width 100%
		&.is-medium
			p
				color color-warning
			.compatibility-container
				.compatibility-level
					background color-warning
					width 66%
		&.is-low
			p
				color color-error
			.compatibility-container
				.compatibility-level
					background color-error
					width 34%

.applicant-modal-buttons
	border-bottom solid 1px color-border
	padding 20px 0
	.buttons-container
		text-align center
		.btn-action
			background color-third
			border solid 1px color-third
			border-radius 100px
			box-shadow 0px 4px 8px rgba(0,0,0,0.15)
			display inline-block
			font-size 14px
			font-weight regular
			outline none
			margin 0 6px
			text-transform none
			&.is-success
				background color-third
				border solid 1px color-third
				color white
			&.is-error
				background color-white
				border solid 1px color-error
				color color-error
		
.applicant-modal-content
	.content-separator
		border-bottom solid 1px color-border
		padding-top 10px
	.content-title
		color color-text-primary
		font-size 18px
		font-weight regular
		line-height 1.2
		margin-bottom 30px
		padding-top 50px
	.content-text
		color color-text-secondary
		font-size 14px
		font-weight regular
		line-height 1.2
		margin-bottom 20px
	.content-item
		color color-text-secondary
		display inline-block
		font-size 13px
		font-weight regular
		line-height 1.2
		margin 0 20px 15px 0
	.content-tag
		background color-secondary
		color color-white
		border-radius 100px
		display inline-block
		font-size 12px
		font-weight regular
		line-height 1.2
		margin 0 25px 15px 0
		padding 2px 10px

.applicant-modal-download
	padding-top 50px
	.download-title
		color color-text-primary
		font-size 18px
		font-weight regular
		line-height 1.2
	.mdl-button.download-button
		background color-third
		border none
		border-radius 100px
		box-shadow 0px 4px 8px rgba(0,0,0,0.15)
		color color-white
		display inline-block
		float right
		font-size 14px
		font-weight regular
		margin-top -8px
		outline none
		padding 0 20px
		text-transform none