
.actions-dropdown
	&.dropdown
		float right
		&.open
			button
				@extends .transition-mdl-elements
				background color-accent
				border solid 1px color-accent
				color color-white
		button
			background color-white
			border solid 1px color-accent
			border-radius 100px
			color color-accent
			height 28px
			font-size 12px
			font-weight regular
			outline none
			padding 0 12px 0 15px
			.material-icons
				font-size 16px
				vertical-align middle
		&.open
			.dropdown-menu
				opacity 1
				top 100%
				visibility visible

		&.dropup
			.dropdown-menu
				bottom 70%
				top auto

		&.open
			&.dropup
				.dropdown-menu
					bottom 100%

		.dropdown-menu
			@extends .transition-mdl-elements
			background color-white
			border-radius 0
			box-shadow 0 7px 17px rgba(0,0,0,0.1)
			border solid 1px color-border
			display block
			left auto
			min-width 160px
			right 0
			opacity 0
			top 70%
			visibility hidden
			&:hover
				box-shadow 0 7px 24px rgba(0,0,0,0.2)
			li
				@extends .transition-mdl-elements
				border none
				color color-text-secondary
				cursor pointer
				display flex
				font-size 11px
				line-height 1
				padding 12px 11px 11px

				&:hover
					background color-background
					color color-text-primary
					padding-left 15px
					text-decoration none
				&.is-negative
					color color-error