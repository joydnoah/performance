
.offer-header-container
	margin 0 15px 16px 30px
	.header-title
		color color-secondary
		cursor pointer
		display inline-block
		font-size 12px
		font-weight regular
		line-height 1.1
		margin 0
		position relative
		&.compatibility-title
			width 24%
		&.ascending
			font-weight bold
			&:before
				-moz-osx-font-smoothing grayscale
				-webkit-font-smoothing antialiased
				color color-secondary
				content 'keyboard_arrow_up'
				direction ltr
				display inline-block
				letter-spacing normal
				line-height 1
				font-family 'Material Icons'
				font-feature-settings 'liga'
				font-size 16px
				font-style normal
				font-weight normal
				position absolute
				left -16px
				text-transform none
				text-rendering optimizeLegibility
				top -1px
				white-space nowrap
				word-wrap normal
		&.descending
			font-weight bold
			&:before
				-moz-osx-font-smoothing grayscale
				-webkit-font-smoothing antialiased
				color color-secondary
				content 'keyboard_arrow_down'
				direction ltr
				display inline-block
				letter-spacing normal
				line-height 1
				font-family 'Material Icons'
				font-feature-settings 'liga'
				font-size 16px
				font-style normal
				font-weight normal
				position absolute
				left -16px
				text-transform none
				text-rendering optimizeLegibility
				top -1px
				white-space nowrap
				word-wrap normal
