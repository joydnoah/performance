
.public-page-content
	padding 100px 0
	.page-logo
		height 60px
		float left
		text-align left
		width 260px
		img
			display inline-block
			height auto
			max-height 120px
			max-width -webkit-fill-available
			width auto
	.page-title
		padding 55px 0 45px
		color color-secondary
		font-size 24px
		font-weight regular
		line-height 1
	.page-subtitle
		padding 10px 0 20px
		color color-secondary
		font-size 18px
		font-weight regular
		line-height 1.2
	.page-item
		margin-bottom 30px
		.item-label
			color color-secondary
			font-size 14px
			font-weight regular
			line-height 1
			margin-bottom 10px
		.item-description
			color color-text-primary
			font-size 17px
			font-weight regular
			line-height 1.2

	.page-position-container
		padding-top 30px
		.position-title
			color color-text-primary
			font-size 22px
			font-weight regular
			line-height 1.2
		.position-item
			margin 10px 0 30px
			.item-label
				color color-text-primary
				font-size 14px
				font-weight regular
				line-height 1
				margin-bottom 10px
			.item-description
				color color-secondary
				cursor pointer
				font-size 20px
				font-weight regular
				line-height 1.2
	.mdl-textfield,
	.mdl-selectfield
		margin-bottom 10px

	.public-form-separator
		margin 10px 0 20px

	.file-upload-container
		padding 25px 0 5px
		.upload-title
			color color-secondary
			font-size 13px
			font-weight regular
			margin-bottom 10px
		.upload-container
			background color-background
			border dashed 1.5px color-border
			cursor pointer
			padding 25px 0
			text-align center
			.upload-sub-title
				color color-primary
				font-size 17px
				font-weight regular
				.material-icons
					height 30px
					margin-right 5px
					vertical-align middle
			.upload-note
				color color-text-secondary
				font-size 12px
				font-weight regular
				padding 0px 25px

		.uploaded-file
			.file-name
				color color-text-primary
				font-size 17px
				font-weight regular
				line-height 1.2
			.material-icons
				font-size 25px
				vertical-align text-bottom
				&.file-icon
					color color-secondary
					margin-right 5px
				&.delete-icon
					color color-error
					margin-left 10px
					vertical-align bottom
	.mdl-button
		&.btn-confirm
			background color-third
			border-radius 100px
			box-shadow 0px 2px 8px rgba(0,0,0,0.13)
			color color-white
			font-size 16px
			height 36px
			margin 40px 0
			padding 0 25px
			text-transform none
			width 100%